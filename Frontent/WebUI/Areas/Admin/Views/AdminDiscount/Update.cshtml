@model DtoLayer.DiscountDtos.ResultDiscountDto

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Rabatt</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rediger Rabatt</div>
                        </div>
                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data" action="/Admin/AdminDiscount/Update">
                                @Html.AntiForgeryToken()
                                <input asp-for="DiscountId" type="hidden" class="form-control" >
                                <input asp-for="ImageUrl" type="hidden" class="form-control" >
                                <input asp-for="CreatedAt" type="hidden" class="form-control" >
                                <div class="form-group">
                                    <label>Tittel :</label>
                                    <input asp-for="Title" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Beskrivelse :</label>
                                    <input asp-for="Description" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Beløp :</label>
                                    <input asp-for="Amount" type="text" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Kode :</label>
                                    <input asp-for="Code" type="text" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label>Bilde Url</label>
                                    <input type="file" id="uploadBox" name="file" class="form-control" />
                                </div>
                                @{
                                    string iActive = Model.IsActive ? "active" : "";
                                }
                                <div class="form-group">
                                    <label for="status">Er Lest</label>
                                    <select id="status" asp-for="IsActive" class="form-control">
                                        <<option value="true" selected="@iActive">True</option>
                                        <option value="false" selected="@(iActive== "" ? "active" : "")">False</option>
                                    </select>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>