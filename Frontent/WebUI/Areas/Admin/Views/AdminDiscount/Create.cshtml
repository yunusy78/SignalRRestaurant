@model DtoLayer.DiscountDtos.CreateDiscountDto

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="main-panel">
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rabatter</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Legg til ny Rabatt</div>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" action="/Admin/AdminDiscount/Create">
                            @Html.AntiForgeryToken()
            
                            <div class="form-group">
                                <label>Tittel :</label>
                                <input asp-for="Title" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Beskrivelse :</label>
                                <input asp-for="Description" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Beløp :</label>
                                <input asp-for="Amount" type="email" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label>Bilde Url</label>
                                <input type="file" id="uploadBox" name="file" class="form-control" />
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>