@model DtoLayer.AboutDtos.CreateAboutDto

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<head>
    <title>Legg til nytt produkt</title>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<div class="main-panel">
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Om Oss</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Legg til ny Om Oss</div>
                </div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-6 custom-form">
                            <form method="post" enctype="multipart/form-data" action="/Admin/AdminAbout/Create">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label>Tittel:</label>
                                    <input asp-for="Title" class="form-control" required>
                                </div>
                                <div class="form-group">
                                    <label>Beskrivelse :</label>
                                    <input asp-for="Description" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label>Bilde Url</label>
                                    <input type="file" id="uploadBox" name="file1" class="form-control" />
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
</div>