@model DtoLayer.EmailDtos.CreateEmailDto

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .custom-form {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            margin-top: 50px;
        }
    </style>
</head>
<body>
<div class="main-panel">
<div class="content">
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 custom-form">
            <h4 class="page-title">E-Post</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Send E-Post</div>
                        </div>
                        <form method="post" action="/Admin/Email/Index">
                            <div class="mail-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Til:</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" asp-for="ReceiverEmail">
                                        <span asp-validation-for="ReceiverEmail" class="text-danger"></span>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Emne:</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" asp-for="Subject">
                                        <span asp-validation-for="Subject" class="text-danger"></span>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Melding:</label>
                                    <div class="col-sm-10">
                                        <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning"><i class="bx bx-envelope"></i> Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
    </div>
</body>
</html>

