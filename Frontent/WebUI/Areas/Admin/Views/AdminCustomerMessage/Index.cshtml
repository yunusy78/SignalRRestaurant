@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Chat</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">SignalR  BurgerClash Umiddelbar Chat</div>
                        </div>
                        <section class="book_section layout_padding">
                            <div class="container">
                                <div class="heading_container">
                                </div>
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="form_container">
                                            <div>
                                                <input type="text" class="form-control" placeholder="Ditt Brukernavn" id="userInput"/>
                                            </div>
                                            <div>
                                                <textarea id="messageInput" rows="4" class="form-control" placeholder="Melding" ></textarea>
                                            </div>
                                            <div>
                                                <input type="button" class="btn btn-warning" value="Send Melding" id="sendButton"/>
                                            </div>
                    
                                            <div>
                                                <div>
                                                    <hr/>
                                                </div>
                                            </div>
                    
                                            <div>
                                                <div>
                                                    <ul class="list-group" id="messageList">
                                
                                                    </ul>
                                                </div>
                                            </div>
                    
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.8/signalr.min.js"></script>
<script src="~/js/chat.js"></script>