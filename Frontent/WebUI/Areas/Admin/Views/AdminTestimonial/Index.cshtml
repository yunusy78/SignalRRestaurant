@model List<DtoLayer.TestimonialDtos.ResultTestimonialDto>

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanser</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referanser Liste</div>
                    </div>
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-bordered table-bordered-bd-info mt-4">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Bilde</th>
                                <th>Navn</th>
                                <th>Tittel</th>
                                <th>Beskrivelse</th>
                                <th>Rediger</th>
                                <th>Slett</th>
                                <th>Detaljer</th>
                            </tr>
                            </thead>

                            <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td><img src="/@item.ImageUrl" alt="" width="100" height="100"></td>
                                    <td>@item.FullName</td>
                                    <td>@item.Title</td>
                                    <td> <script>
                var description = "@item.Description";
                var first30Words = description.split(" ").slice(0, 15).join(" ");                                                                                     
               document.write(first30Words);                                                                                
                                        </script></td>
                                    <td><a href="/Admin/AdminTestimonial/Update/@item.TestimonialId" class="btn btn-outline-warning"> <i class="mdi mdi-account-edit"></i> Rediger</a></td>
                                    <td><a href="/Admin/AdminTestimonial/Delete/@item.TestimonialId" class="btn btn-outline-danger" onclick="deleteItemWarning()"><i class="mdi mdi-delete"></i> Slett</a> </td>
                                    <td><a href="#" class="btn btn-outline-primary"><i class="mdi mdi-eye"></i> Detaljer</a></td>
                                </tr>
                                <script>
                function deleteItemWarning() {
                var confirmDelete = confirm("Advarsel! Denne handlingen vil slette elementet permanent. Er du sikker på at du vil fortsette?");
                if (confirmDelete) {
            // Brukeren bekreftet sletting, slettingsprosessen kan fortsette.
                window.location.href = "/Admin/AdminTestimonial/Delete/@item.TestimonialId";
                  }
               }
            </script>
                            }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminTestimonial/Create" class="btn btn-primary"> <i class="mdi mdi-plus"></i> Legg en ny Referanser</a>
                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
    </div>
</div>
</div>