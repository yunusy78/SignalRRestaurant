@model DtoLayer.ProductDtos.ResultProductDto

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="main-panel">
<div class="content">
<div class="container-fluid">
    <h4 class="page-title">Produkt</h4>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Rediger Produkt</div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" action="/Admin/AdminProduct/Update">
                        @Html.AntiForgeryToken()
                        <label asp-for="ProductId" type="hidden"></label>
                        <label asp-for="ImageUrl" type="hidden"></label>
                        <div class="form-group">
                            <label asp-for="CategoryId">Kategori</label>
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.BlogCategoryList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Tittel:</label>
                            <input asp-for="ProductName" class="form-control" required>
                        </div>
                
                        <div class="form-group">
                            <label>Beskrivelse  :</label>
                            <textarea asp-for="Description" rows="6" class="custom-form" required=""></textarea>
                        </div>
                
                        <div class="form-group">
                            <label>Prise :</label>
                            <input asp-for="Price" type="number" class="form-control" required>
                        </div>
                
                        <div class="mb-3">
                            <label>Bilde Url</label>
                            <input type="file" id="uploadBox" name="file1" class="form-control" />
                        </div>
                
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lagre</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
