@model List<DtoLayer.ProductDtos.ResultProductDto>

@{
    ViewBag.Title = "title";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="main-panel">
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Produkt</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Produkt Liste</div>
                    </div>
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-bordered table-bordered-bd-info mt-4">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Bilde</th>
                                <th>Navn</th>
                                <th>Kategori</th>
                                <th>Beskrivelse</th>
                                <th>Pris</th>
                                <th>Status</th>
                                <th>Rediger</th>
                                <th>Slett</th>
                                <th>Detaljer</th>
                        
                            </tr>
                            </thead>

                            <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td><img src="@item.ImageUrl" width="100" height="100" /></td>
                                    <td>@item.ProductName</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.Description</td>
                                    <td>@item.Price</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Admin/AdminProduct/Update/@item.ProductId" class="btn btn-outline-warning"> <i class="mdi mdi-account-edit"></i> Rediger</a></td>
                                    <td><a href="/Admin/AdminProduct/Delete/@item.ProductId" class="btn btn-outline-danger" onclick="deleteItemWarning()"><i class="mdi mdi-delete"></i> Slett</a> </td>
                                </tr>
                                <script>
                function deleteItemWarning() {
                var confirmDelete = confirm("Advarsel! Denne handlingen vil slette elementet permanent. Er du sikker på at du vil fortsette?");
                if (confirmDelete) {
            // Brukeren bekreftet sletting, slettingsprosessen kan fortsette.
                window.location.href = "/Admin/AdminProduct/Delete/@item.ProductId";
                  }
               }
            </script>
                            }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminProduct/Create" class="btn btn-primary"> <i class="mdi mdi-plus"></i> Legg en ny Produkt</a>
                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
    </div>
</div>
</div>